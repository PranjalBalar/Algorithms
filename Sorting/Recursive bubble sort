# -*- coding: utf-8 -*-

#This program sorts the array using recursive bubble sort
#The complexity of this array is nÂ²
import random
list = []
for i in range(10):
    list.append(random.randint(1, 100))
print "Unsorted array:", list

def rbs(l, x):
    if x == 1:
        return
    
    for i in range(x - 1):
        if l[i] > l[i + 1]:
            n = l[i]
            l[i] = l[i + 1]
            l[i + 1] = n
   
    rbs(l, x - 1)

rbs(list, len(list))
print "Sorted array:", list
